<div class="card bg-light d-inline-block text-wrap float-left h-25 w-75 my-1 room-card"
  data-model_name="<%= Room.model_name.singular %>"
  data-id="<%= room.id %>">
  <div class="d-flex flex-column h-100" style="width: 25rem; min-width: 25rem;">
    <div class="font-weight-bold px-4 pt-2 room-header">
      <h2 class="text-wrap roomtitle-name">
        <%= room.title %>
      </h2>
      <div class="text-right position-absolute" style="top: 4px; right: 4px">
         <%= link_to(new_room_chat_path(room), title: "New Chat", class: "btn px-0", remote: true) do %>コメント<% end %>
         <%= link_to "コメントする", room, class: "btn px-0" %>
          <button type="button" class="btn" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            <i class="fas fa-ellipsis-v align-middle"></i>
          </button>
          <div class="dropdown-menu dropdown-menu-right text-middle">
            <%= link_to "Edit", edit_room_path(room), class: "dropdown-item", remote: true %>
            <%= link_to "Delete", room, method: :delete, class: "dropdown-item text-danger", remote: true, data: { confirm: 'Are you sure?' } %>
          </div>
        </div>
      </div>
    </div>
    <div class="card-body px-2 pb-2 pt-0 overflow-auto chat-cards">
      <%= render partial: "chats/chat", collection: room.chats, as: :chat %>
      <div>
      <%= render partial: "rooms/tag", collection: room.tags, as: :tag %>
      </div>
    </div>
  </div>
</div>