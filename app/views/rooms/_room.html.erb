<div class="card bg-light d-inline-block text-wrap float-left h-25 w-100 my-1 room-card"
  data-model_name="<%= Room.model_name.singular %>"
  data-id="<%= room.id %>">
  <div class="d-flex flex-column h-100" style="width: 85%; min-width: 25rem;">
    <div class="font-weight-bold px-4 pt-2 room-header">
      <h2 class="text-nowrap roomtitle-name">
        <%= room.title %>
      </h2>
      <div class="text-right position-absolute" style="top: 4px; right: 4px">
       
         <%= link_to "コメントする", room, class: "btn btn-link btn-outline-dark" %>
            <div  style="height: 65px">
           
            <%= link_to "", "https://twitter.com/share?url=#{request.url}/&text=ゲーム攻略 &hashtags=攻略,募集",class: "fab fa-twitter fa-2x", title: 'Twitter', target: '_blank' %>
            </div>
          </div>
          </div>
       
      <div class=my-3>
         <%= render partial: "rooms/tag", collection: room.tags, as: :tag %>
      </div>
      
      </div>
    </div>
    
 