
<div class="card d-inline-block text-wrap float-left h-40 w-75 my-1 room-card mx-auto"
data-model_name="<%= Room.model_name.singular %>"
data-id="<%= @room.id %>">
<div class="d-flex flex-column h-100" style="width: 100%;">
	<div class="font-weight-bold px-4 pt-2 room-header">
		<h2 class="text-wrap show-roomtitle-name">
			<%= @room.title %>
		</h2>
		<div>
		<%= render partial: "rooms/tag", collection: @room.tags, as: :tag %>
		</div>
		</div>
		<div class="text-right position-absolute" style="top: 4px; right: 4px">
			
		
				
			</div>
		</div>
	</div>
	
	<div class="card-body px-2 pb-2 pt-0 overflow-auto chat-cards">
		<%= render partial: "chats/chat", collection: @room.chats, as: :chat %>
		
	</div>
	 <%= link_to new_room_chat_path(@room), title: "New Chat",class: "btn py-2 btn-outline-dark", remote: true do %>
	


	コメントする


<% end %>


</div>