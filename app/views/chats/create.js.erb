// Rails @status => true formの内容消去、要素の追加 : false モーダルを再度表示
<% if @status %>
// formを空にする / formにフォーカスする
$('[data-model_name="room"]').filter('[data-id="<%= @room.id %>"]').find('form [name="chat[content]"]').val("")
$('[data-model_name="chat"]').filter('[data-id="<%= @room.id %>"]').find('form [name="chat[content]"]').eq(0).focus();

// 順序が入れ替わるため、todosを描画しなおす
$('[data-model_name="room"]').filter('[data-id="<%= @room.id %>"]').find(".chat-cards").html("<%= j(render partial: 'chats/chat', collection: @room.chats, as: :chat) %>");

<% else %>
$('[data-model_name="room"]').filter('[data-id="<%= @room.id %>"]').find('form [name="chat[content]"]').eq(0).focus();
<% end %>