<div class="modal fade" id="roomModal" tabindex="-1" role="dialog" aria-labelledby="roomModalLabel">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <%= form_with(model: chat, url: [room, chat], remote: true, class: "") do |form| %>
        <div class="modal-header">
          <h5 class="modal-title" id="roomModal">コメント</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="閉じる">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          <% if chat.errors.any? %>
            <div id="error_explanation">
              <h2><%= pluralize(chat.errors.count, "error") %> prohibited this chat from being saved:</h2>
              <ul>
                <% chat.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
              </ul>
            </div>
          <% end %>
          
           <div class="field">
     <%= form.text_field :name, :placeholder => "名前"  %>
           </div>
           <textarea class="textarea-large" placeholder="コメント">
     <%= chat.content %>
     </textarea>
     <div class="field">
     <%= form.label "画像をアップロード" %><br><%= form.file_field :image %></br>
     </div>
          
        </div>
        <div class="modal-footer actions">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">閉じる</button>
          <%= form.submit "投稿する" %>
        </div>
      <% end %>
    </div>
  </div>
</div>